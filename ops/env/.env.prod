# Core
NODE_ENV=production
PUBLIC_HTTP_PORT=80
API_GATEWAY_PORT=3000

# Security
JWT_ACCESS_SECRET=replace_with_long_random_secret
JWT_REFRESH_SECRET=replace_with_long_random_secret
REFRESH_ROTATION_STRICT=true
INTERNAL_SERVICE_KEY=replace_with_long_random_secret

# Redis / RabbitMQ
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=replace_with_redis_password
RABBITMQ_URL=amqp://admin:replace_with_rabbitmq_password@rabbitmq:5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=replace_with_rabbitmq_password
RABBITMQ_EXCHANGE=erp.events

# Gateway hardening
CORS_ENABLED=true
CORS_ORIGINS=https://admin.example.com,https://shop.example.com,https://pos.example.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
EVENT_DLQ_MAX_RETRIES=3
HELMET_ENABLED=true
TRUST_PROXY=true
INTERNAL_IP_WHITELIST_ENABLED=true
INTERNAL_IP_WHITELIST=10.0.0.1,127.0.0.1,::1
LOG_LEVEL=info
OTEL_ENABLED=false

# Public app URLs
NEXT_PUBLIC_API_BASE=https://api.example.com
VITE_API_BASE=https://api.example.com

# Payment (canonical)
SSLCOMMERZ_STORE_ID=replace_with_store_id
SSLCOMMERZ_STORE_PASSWORD=replace_with_store_password
SSLCOMMERZ_BASE_URL=https://sandbox.sslcommerz.com
SSLCOMMERZ_VALIDATION_URL=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php
SSLCOMMERZ_IS_LIVE=false
SSLCOMMERZ_SUCCESS_URL=https://api.example.com/api/v1/payments/success
SSLCOMMERZ_FAIL_URL=https://api.example.com/api/v1/payments/fail
SSLCOMMERZ_CANCEL_URL=https://api.example.com/api/v1/payments/cancel
SSLCOMMERZ_IPN_URL=https://api.example.com/api/v1/payments/ipn

# Payment (legacy compatibility aliases)
SSLCZ_STORE_ID=${SSLCOMMERZ_STORE_ID}
SSLCZ_STORE_PASSWORD=${SSLCOMMERZ_STORE_PASSWORD}
SSLCZ_IS_LIVE=${SSLCOMMERZ_IS_LIVE}
SSLCZ_SUCCESS_URL=${SSLCOMMERZ_SUCCESS_URL}
SSLCZ_FAIL_URL=${SSLCOMMERZ_FAIL_URL}
SSLCZ_CANCEL_URL=${SSLCOMMERZ_CANCEL_URL}
SSLCZ_IPN_URL=${SSLCOMMERZ_IPN_URL}

# Pathao
PATHAO_BASE_URL=https://api-hermes.pathao.com
PATHAO_CLIENT_ID=replace_with_client_id
PATHAO_CLIENT_SECRET=replace_with_client_secret
PATHAO_USERNAME=replace_with_username
PATHAO_PASSWORD=replace_with_password

# Steadfast
STEADFAST_BASE_URL=https://portal.packzy.com/api/v1
STEADFAST_API_KEY=replace_with_api_key
STEADFAST_SECRET_KEY=replace_with_secret_key
STEADFAST_SECRET=${STEADFAST_SECRET_KEY}

# Email / SMS (notification-service)
SMTP_HOST=replace_with_smtp_host
SMTP_PORT=587
SMTP_USER=replace_with_user
SMTP_PASS=replace_with_password
SMS_PROVIDER=disabled

